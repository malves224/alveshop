{
  "name": "backend-alveshop",
  "version": "1.0.0",
  "description": "Backend para a aplicação Alveshop.",
  "main": "./build/server.js",
  "scripts": {
    "start:reset": "npm run db:reset && ts-node src/index.ts",
    "start": "ts-node src/index.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "db:migration": "npx sequelize-cli db:migrate",
    "db:seeds": "npx sequelize-cli db:seed:all",
    "test": "mocha -r ts-node/register src/tests/unit/**/*.test.ts --exit -t 60000",
    "test:coverage": "nyc npm run test",
    "start:dev": "nodemon src/index.ts"
  },
  "author": "Matheus Alves de Oliveira",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "4.3.0",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/mocha": "9.1.0",
    "@types/node": "16.11.7",
    "@types/sequelize": "4.28.10",
    "@types/sinon": "10.0.11",
    "@types/validator": "13.6.6",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "chai": "4.3.6",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "15.0.0",
    "eslint-plugin-editorconfig": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "9.0.0",
    "eslint-plugin-sonarjs": "0.10.0",
    "mocha": "9.2.1",
    "nodemon": "2.0.15",
    "nyc": "^15.1.0",
    "sequelize-cli": "6.3.0",
    "sinon": "13.0.1",
    "ts-node": "10.7.0",
    "typescript": "4.4.4"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/joi": "^17.2.3",
    "argon2": "^0.28.5",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.2",
    "cors": "2.8.5",
    "dotenv": "^10.0.0",
    "express": "4.17.1",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "2.3.3",
    "sequelize": "6.9.0"
  }
}
